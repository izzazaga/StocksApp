<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Stocks" parent="Theme.Material3.DayNight.NoActionBar"/>

    <!-- Application theme. -->
    <style name="Theme.Stocks" parent="Base.Theme.Stocks">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">@dimen/xsmall_block</item>
    </style>

    <style name="TextTitle" parent="Base.Theme.Stocks">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextBody" parent="Base.Theme.Stocks">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="TextStock" parent="Base.Theme.Stocks">
        <item name="android:textSize">@dimen/xlarge_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="TextFooter" parent="Base.Theme.Stocks">
        <item name="android:paddingTop">@dimen/xsmall_block</item>
        <item name="android:layout_marginBottom">@dimen/no_block</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:gravity">center</item>
    </style>

</resources>